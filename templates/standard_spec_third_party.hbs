<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Standard Spec Third Party</title>
        <link rel="stylesheet" href="/css/styles.css">
    </head>
    <body>
        <div class="stateHeaderParent">
            <div class="stateHeaderText">
                <h3>DISABILITY DETERMINATIONS SERVICE DIVISION</h3>
                <span>1505 N Mckinney Ln P.O. Box 21 Boise ID 83707-8533</span>
                <span>Phone 208-327-7331505</span>
            </div>
            <div class="stateHeader">
                <img src="{{letterhead}}"></img>
            </div>
        </div>

        <div class="rTable">
            <div class="rTableRow">
                <div class="rTableCell"></div>
                <div class="rTableCell"></div>
                <div class="rTableCell">RE: {{clmt_full_name}}</div>
            </div>
            <div class="rTableRow">
                <div class="rTableCell"></div>
                <div class="rTableCell"></div>
                <div class="rTableCell">AKA: {{clmt_full_name}}</div>
            </div>
            <div class="rTableRow">
                <div class="rTableCell"></div>
                <div class="rTableCell"></div>
                <div class="rTableCell">DOB: {{dateHelperFormat case.claimantInfo.dateOfBirth 'MMMM D, YYYY'}}</div>
            </div>
            <div class="rTableRow">
                <div class="rTableCell"></div>
                <div class="rTableCell"></div>
                <div class="rTableCell">SSN: {{case.claimantInfo.ssn}}</div>
            </div>
            <div class="rTableRow">
                <div class="rTableCell"></div>
                <div class="rTableCell"></div>
                <div class="rTableCell">Vendor Number: {{vendor.offeringVendor.vendorId}}</div>
            </div>
            <div class="rTableRow">
                <div class="rTableCell"></div>
                <div class="rTableCell"></div>
                <div class="rTableCell">Date: {{currentDate}}</div>
            </div>
            <div class="rTableRow">
                <div class="rTableCell"></div>
                <div class="rTableCell"></div>
                <div class="rTableCell">Case ID: {{case.caseId}}</div>
            </div>
        </div>

        <div class="rTable">
            <div class="rTableRow">
                <div class="rTableCell">{{vendor.offeringVendor.vendorName.organizationName}}</div>
                <div class="rTableCell"></div>
            </div>
            <div class="rTableRow">
                <div class="rTableCell">{{vendor.serviceCommunication.correspondenceAddress.line1}}</div>
                <div class="rTableCell"></div>
            </div>
            <div class="rTableRow">
                <div class="rTableCell">
                    {{vendor.serviceCommunication.correspondenceAddress.city}}
                    {{vendor.serviceCommunication.correspondenceAddress.state}}
                    {{vendor.serviceCommunication.correspondenceAddress.zip5}}
                </div>
                <div class="rTableCell"></div>
            </div>
            <div class="rTableRow">
                <div class="rTableCell">
                    {{third_party_address}}
                </div>
                <div class="rTableCell"></div>
            </div>
        </div>

        {{>"Standard Signature Block"}}
    </body>
</html>
